		<form class="border border-light p-5 z-depth-1-half" action="/register" method="POST">

		    <p class="h4 mb-4">Sign up</p>

				<!-- Grid row -->
				
				<%if(typeof error !== undefined && error != ""){%>
					<div class="alert alert-primary" role="alert">
							<%=error%>
					</div>
				<%}%>
				
		    <div class="form-group row">
