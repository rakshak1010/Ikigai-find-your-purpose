			    <label for="Username" class="col-sm-2 col-form-label"><i class="fas fa-user prefix"></i></label>
			    <div class="col-sm-10">
			      <div class="md-form mt-0">
			        <input type="text" class="form-control" id="UserName" name="username" placeholder="Username">
			        <small id="defaultRegisterFormPhoneHelpBlock" class="form-text text-muted mb-4">
		        		Choose unique Username
		    		</small>
			      </div>
			    </div>
			  </div>
			  <!-- Grid row -->

		    <div class="form-group row">
			    <!-- Material input -->
			    <label for="inputPassword3MD" class="col-sm-2 col-form-label"><i class="fas fa-key prefix"></i></label>
			    <div class="col-sm-10">
			      <div class="md-form mt-0">
			        <input type="password" name="password" class="form-control" id="Password" placeholder="Password">
			        <small id="defaultRegisterFormPhoneHelpBlock" class="form-text text-muted mb-4">
		        		Use 8 character password for more security
		    		</small>
			      </div>
			    </div>
			  </div>
			  <!-- Grid row -->

		    <!-- E-mail -->

